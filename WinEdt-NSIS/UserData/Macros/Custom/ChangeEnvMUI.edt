:change::
ResetGroup;
BeginGroup;
SaveFind;
SetFindTextSelect(1);
SetNotFoundNotify(1);
SetSearchSelected;
SetSearchCurrentDoc;
SetSearchCyclic(0);
SetSearchEntire(0);
SetSearchForward(0);
SetRegEx(1);
SetSearchCaseSensitive(1);
SetFindStr("{\\begin\{*\}}|{\$\$}|{\\\[}");

Loop(!`>
   IfFound(>
     !"Mark(1);>
       GetSel(0,1);>
       MatchDelimiter(0,0,1,1);>
       IfOK('','Stop;');>
       IfNum(%!3,%l,'=','Mark(1);MatchDelimiter(0,0,1,1);IfOK('''',''Stop;'');');>
       LetRegNum(3,%l);>
       IfNum(%l*1000+%c+1,%!0,'>=',>
        !'SetTracking(1);>
          Refresh(1);>
          IfStr(''%!9'','''',''='',''Goto(0);RestoreFind; Exit;'');>
          SetTracking(0);>
          GetSel(0,2);>
          GetLength(7,''%!2'');>
          Repeat(%!7,''SelCharLeft;'');>
          IfStr(''%!8'','''',''='',''LetReg(8,|\begin{%!9}|);LetReg(9,|\end{%!9}|);'');>
          InsText(''%!9'');>
          Goto(1);>
          GetLength(7,''%!1'');>
          Repeat(%!7,''SelCharRight;'');>
          InsText(''%!8'');>
          Stop;',>
        !'MatchDelimiter(0,0,1,1);'>
       );>
       ",>
     "Stop;">
   );>
`);

RestoreFind;

:exit::
GotoLin(%!0/1000);
SetTracking(1);
Refresh;
EndGroup;
PopTagsandRegisters;
End;
